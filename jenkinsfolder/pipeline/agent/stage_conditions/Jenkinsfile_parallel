pipeline{
    agent any
    stages {
        stage('Build'){
            steps {
                sh '''
                pwd
                sleep 5
                echo This is the first stage :Build
                '''
            }
    
    }
stage('TEST MULTILPE'){
    parllel{
        stage('TEST1'){
           steps {
            sh 'sleep 5; echo This is the first stage:TEST1'
           } 
        }
        stage('TEST MULTILPE'){
    parllel{
        stage('TEST1'){
           steps {
            sh 'sleep 5; echo This is the first stage:TEST1'
           } 
        }
 
        stage('TEST2'){
           steps {
            sh 'sleep 5; echo This is the first stage:TEST1'
           } 
        }
   
        stage('TEST3'){
           steps {
            sh 'sleep 5; echo This is the first stage:TEST1'
           } 
        }
        stage('TEST4'){
           steps {
            sh 'sleep 5; echo This is the first stage:TEST1'
           } 
        }
    }
        }
   stage('DEPLOY'){
    steps {
        sh '''
        pwd sleep 5
        echo this is the first stage:DEPLOY
        '''
    }
   }
    }

        }
